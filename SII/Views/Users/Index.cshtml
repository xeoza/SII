@model List<SII.User>
@{
    ViewData["Title"] = "Users";
    Layout = "Layout";
}

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h1>Users</h1>

<table>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th></th>
        <th></th>
    </tr>
    @foreach (SII.User u in Model)
    {
        <tr>
            <td>@u.Id</td>
            <td>@u.Name</td>
            <td>
                <a class="btn btn-sm btn-warning" asp-action="ClearStat" asp-route-id="@u.Id">Сброс статистики</a>
            </td>
            <td>
                <a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@u.Id">Удалить</a>
            </td>
        </tr>
    }
</table>

<form method="post">
    <fieldset>
        <legend>Add user</legend>
        <div>
            <label for="Id">Id::</label>
            <input type="text" name="Id" value="" />
        </div>
        <div>
            <label for="Name">Name:</label>
            <input type="text" name="Name" value="" />
        </div>
        <div>
            <label>&nbsp;</label>
            <input type="submit" value="Submit" class="submit" />
        </div>
    </fieldset>
</form>